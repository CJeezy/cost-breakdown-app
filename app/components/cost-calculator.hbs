{{yield}}
<div style="text-align: center;">
    <div>
        <input type="textarea" placeholder="Name" value={{nameVal}} oninput={{action UpdateName}}><br>
        <input type="textarea" placeholder="What?" value={{eventVal}} oninput={{action UpdateEvent}}><br>
        <input type="number" placeholder="How Much?" value={{payVal}} oninput={{action UpdateCost}}><br>
    </div>

    <div style="margin-top: 1.5pc;">
        <button onclick={{action AddName}}>Add Person</button>
    </div>
</div>

<div style="text-align:center">
    <ul data-test-event-list>
       {{#each this.NameList as |person|}}
        <p>{{person.name}} paid: ${{person.amountPaid}} for {{person.event}}</p>
        <p>{{calculate-split NameList}}</p>
        
        {{#if (greater-than person.amountPaid (calculate-split NameList))}}
            <p>{{person.name}} is owed ${{is-owed person.amountPaid (calculate-split NameList)}}</p>

        {{else if (is-equal person.amountPaid (calculate-split NameList))}}
            <p>{{person.name}} owes nothing</p>

        {{else}}
            <p>{{person.name}} owes ${{is-owed (calculate-split NameList) person.amountPaid}}</p>
        {{/if}}
        <button id="removeName={{name}}" onclick={{action RemoveName person}}>-</button> <br> 

    {{/each}}
    </ul>
</div>
